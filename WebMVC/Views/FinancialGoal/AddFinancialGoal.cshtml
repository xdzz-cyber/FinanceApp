@using Microsoft.AspNetCore.Mvc.Localization
@model AddFinancialGoalVm

@{
    Layout = "_Layout";
}

@inject IViewLocalizer Localizer

<h2>@Localizer["AddFinancialGoalWelcomeMessage"].Value</h2>

@using (Html.BeginForm("AddFinancialGoal", "FinancialGoal", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.FinancialGoal.Name, "Name")
        @Html.TextBoxFor(model => model.FinancialGoal.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.FinancialGoal.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FinancialGoal.Description, "Description")
        @Html.TextBoxFor(model => model.FinancialGoal.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.FinancialGoal.Description, "", new { @class = "text-danger" })
    </div>
    
    <div class="form-group">
        @Html.LabelFor(model => model.FinancialGoal.CurrentAmount, "CurrentAmount")
        @Html.TextBoxFor(model => model.FinancialGoal.CurrentAmount, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.FinancialGoal.CurrentAmount, "", new { @class = "text-danger" })
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.FinancialGoal.TargetAmount, "TargetAmount")
        @Html.TextBoxFor(model => model.FinancialGoal.TargetAmount, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.FinancialGoal.TargetAmount, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FinancialGoal.TargetDate, "TargetDate")
        @Html.TextBoxFor(model => model.FinancialGoal.TargetDate, new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(model => model.FinancialGoal.TargetDate, "", new { @class = "text-danger" })
    </div>
    
    
    <div class="form-group">
        @Html.LabelFor(model => model.FinancialGoal.BudgetId, "BudgetId")
        @Html.DropDownListFor(model => model.FinancialGoal.BudgetId, new SelectList(Model.Budgets, "Id", "Name"), "Select Budget", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.FinancialGoal.BudgetId, "", new { @class = "text-danger" })
    </div>
    
    <div class="form-group">
        @Html.LabelFor(model => model.FinancialGoal.CategoryName, "CategoryName")
        @Html.DropDownListFor(model => model.FinancialGoal.CategoryName, new SelectList(Model.Categories, "Id", "Name"), "Select Category", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.FinancialGoal.CategoryName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
}