@* @model TModel *@

@{
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Payment";
}

<h2>Payment</h2>

<form id="payment-form" asp-controller="Payment" asp-action="Charge" method="post">
    <div>
        <label for="amount">Amount (in dollars):</label>
        <input type="number" id="amount" name="amount" />
    </div>
    <div id="card-element"></div>
    <button type="submit">Pay</button>
</form>

<script>
    proceedTransaction('@ViewBag.StripePublicKey');
</script>